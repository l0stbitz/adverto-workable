{% extends 'AdminBundle:Base:base.html.twig' %}


{% block title %}Admin - Business Units{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block content %}
    <!-- Content Section Start -->
    <div class="content-section">
        <div class="container-liquid">
            {% include 'AdminBundle:JMP:Base/sidebar.html.twig' %}   
            <div class="float-row-smaller listingPages">
                <div class="col-xs-12">
                    <div class="col-xs-8"><h1>Admin - Business Units</h1></div>
                    <div class="col-xs-4">
                        <a href="{{ path('admin_jmp_business_unit_new') }}" class="addPageBtn pull-right">CREATE A BUSINESS UNIT</a>
                    </div>
                </div>
                <div class="col-xs-12 headPages">
                    <div class="col-xs-1">&nbsp;</div>
                    <div class="col-xs-5">Business Unit Name</div>
                    <div class="col-xs-6">LAST LOG</div>
                </div>
                <div id="pages_sortable_list" class="ui-sortable">
                    <div id="infoSorting"></div>
                    {% for business in businesses %}
                    <div class="col-xs-12 listing" id="item_{{ business.position }}">
                        <div class="col-xs-1">&nbsp;</div>
                        <div class="col-xs-5">{{ business.name }}</div>
                        <div class="col-xs-2">{{ business.userModified }}</div>
                        <div class="col-xs-2">{{ business.dateModified|date("m/d/Y") }}</div>
                        <div class="col-xs-2">
                            <a href="#" class="actionBtn drag ui-sortable-handle" rel="">Drag</a>
                            <a href="{{ path('admin_jmp_business_unit_edit', {id:business.id}) }}" class="actionBtn edit">Edit</a>
                        </div>
                    </div>
                    {% endfor %}
                </div>
                <div class="col-xs-12 pagesTip">
                    <div class="col-xs-1">&nbsp;</div>
                    <div class="col-xs-7"><span>Tip.</span> Do you need to add another business unit?</div>
                    <div class="col-xs-4"><a href="{{ path('admin_jmp_business_unit_new') }}" class="addPageBtn pull-right">CREATE A BUSINESS UNIT</a></div>
                </div>
            </div>
            <!-- Row End -->
        </div>
    </div>
    <script type="text/javascript">
        var relatedPage = 'jmp/business-units';
    </script>            <!-- Content Section End -->
{% endblock %}
