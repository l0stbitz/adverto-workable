{% extends 'AdminBundle:Base:base.html.twig' %}


{% block title %}Admin - Locations{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block content %}
    <!-- Content Section Start -->
    <div class="content-section">
        <div class="container-liquid">
            {% include 'AdminBundle:JMP:Base/sidebar.html.twig' %}   
            <div class="float-row-smaller listingPages">
                <div class="col-xs-12">
                    <div class="col-xs-8"><h1>Admin - Locations</h1></div>
                    <div class="col-xs-4">
                        <a href="{{ path('admin_jmp_location_new') }}" class="addPageBtn pull-right">CREATE A LOCATION</a>
                    </div>
                </div>
                <div class="col-xs-12 headPages">
                    <div class="col-xs-1">&nbsp;</div>
                    <div class="col-xs-5">Location Name</div>
                    <div class="col-xs-6">LAST LOG</div>
                </div>
                <div id="pages_sortable_list" class="ui-sortable">
                    <div id="infoSorting"></div>
                    {% for location in locations %}
                    <div class="col-xs-12 listing" id="item_{{ location.position }}">
                        <div class="col-xs-1">&nbsp;</div>
                        <div class="col-xs-5">{{ location.name }}</div>
                        <div class="col-xs-2">{{ location.userModified }}</div>
                        <div class="col-xs-2">{{ location.dateModified|date("m/d/Y") }}</div>
                        <div class="col-xs-2">
                            <a href="#" class="actionBtn drag ui-sortable-handle" rel="">Drag</a>
                            <a href="{{ path('admin_jmp_location_edit', {id:location.id}) }}" class="actionBtn edit">Edit</a>
                        </div>
                    </div>
                    {% endfor %}
                </div>
                <div class="col-xs-12 pagesTip">
                    <div class="col-xs-1">&nbsp;</div>
                    <div class="col-xs-7"><span>Tip.</span> Do you need to add another location?</div>
                    <div class="col-xs-4"><a href="{{ path('admin_jmp_location_new') }}" class="addPageBtn pull-right">CREATE A LOCATION</a></div>
                </div>
            </div>
            <!-- Row End -->
        </div>
    </div>
    <!-- Content Section End -->
{% endblock %}
